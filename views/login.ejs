<%- include('partials/header') %>

<div class="container mt-5">
  <h1>Login</h1>

  <div class="row">
    <div class="col-sm-8">
      <div class="card">
        <div class="card-body">

          <!-- Makes POST request to /login route -->
          <form action="/login" method="POST">
            <div class="form-group">
              <label for="email">Email</label>
              <input type="email" class="form-control" name="username">
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <input type="password" class="form-control" name="password">
            </div>
            <button type="submit" class="btn btn-dark">Login</button>
          </form>

        </div>
      </div>
    </div>

     <div class="col-sm-4">
      <div class="card">
        <div class="card-body">
          <a class="btn btn-block txt btn-google btn-social" href="/auth/google" role="button">
            <i class="fab fa-google"></i>
              Log In with Google
          </a>
        </div>
      </div>

      <div class="card">
        <div class="card-body">
          <a class="btn btn-block txt btn-facebook btn-social" href="/auth/facebook" role="button">
            <i class="fab fa-facebook"></i>
              Log In with facebook
          </a>
        </div>
      </div>

     <div class="card">
       <div class="card-body">
         <a class="btn btn-block txt btn-twitter btn-social" href="/" role="button">
           <i class="fab fa-twitter"></i>
             Log In with Twitter
         </a>
       </div>
     </div>

    </div>

  </div>
</div>

<%- include('partials/footer') %>
